generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              String   @id @default(uuid())
  nama            String
  password        String
  role            Role
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  nip             String?  @unique
  nisn            String?  @unique
  loansAsAdmin    Loan[]   @relation("AdminLoan")
  loansAsPeminjam Loan[]   @relation("PeminjamLoan")
  sentMessages    Message[] @relation("Sender")
  receivedMessages Message[] @relation("Receiver")

  @@index([role])
}

model Barang {
  id          String   @id @default(uuid())
  kodeBarang  String   @unique
  namaBarang  String
  kondisi     String
  stok       Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  loans      Loan[]

  @@index([namaBarang])
}

model Loan {
  id                String     @id @default(uuid())
  tanggalPinjam      DateTime?  // NULL for PENDING, set when approved
  tanggalJatuhTempo  DateTime?  // NULL for PENDING, calculated = tanggalPinjam + 24 hours
  tanggalDikembalikan DateTime?  // NULL means not returned yet
  returnReason       String?    // Reason notes when returned
  returnCondition    ReturnCondition? // Condition of item when returned (NORMAL, RUSAK, HILANG)
  status            LoanStatus
  peminjamId        String
  adminId           String?
  barangId          String
  createdAt         DateTime   @default(now())        
  updatedAt         DateTime   @updatedAt
  admin             User?      @relation("AdminLoan", fields: [adminId], references: [id])
  barang            Barang     @relation(fields: [barangId], references: [id])
  peminjam          User       @relation("PeminjamLoan", fields: [peminjamId], references: [id])
  messages          Message[]

  @@index([peminjamId])
  @@index([adminId])
  @@index([barangId])
  @@index([status])
}

enum Role {
  ADMIN
  PEMINJAM
}

enum LoanStatus {
  PENDING      // Menunggu persetujuan admin
  DISETUJUI   // Disetujui, belum diambil
  DIPINJAM    // Sedang dipinjam
  PENGEMBALIAN// Peminjam mengajukan pengembalian
  DIKEMBALIKAN// Admin konfirmasi pengembalian
  DITOLAK     // Pengajuan ditolak
}

enum ReturnCondition {
  NORMAL // Barang kembali dan layak pakai
  RUSAK  // Barang kembali tapi tidak layak
  HILANG // Barang tidak dikembalikan
}

model Message {
  id          String   @id @default(uuid())
  content     String
  senderId    String
  receiverId String
  loanId      String?  // Optional, untuk pesan terkait peminjaman tertentu
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
  sender      User     @relation("Sender", fields: [senderId], references: [id])
  receiver    User     @relation("Receiver", fields: [receiverId], references: [id])
  loan        Loan?    @relation(fields: [loanId], references: [id])

  @@index([senderId])
  @@index([receiverId])
  @@index([loanId])
}
